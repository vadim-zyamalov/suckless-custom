+		return;
+	
+	nx = mon->wx + gappx;
+	ny = mon->wy;
+	nw = (mon->ww - gappx) - gappx;
+	nh = (mon->wh - gappx) - gappx;
+	
+	for(i = 0, c = nexttiled(mon->clients); c; c = nexttiled(c->next)) {
+		if((i % 2 && nh / 2 > 2 * c->bw)
+		   || (!(i % 2) && nw / 2 > 2 * c->bw)) {
+			if(i < n - 1) {
+				if(i % 2)
+					nh = (nh - gappx) / 2;
+				else
+					nw = (nw - gappx) / 2;
+				if((i % 4) == 2 && !s)
+					nx += nw + gappx;
+				else if((i % 4) == 3 && !s)
+					ny += nh + gappx;
+			}
+			if((i % 4) == 0) {
+				if(s)
+					ny += nh + gappx;
+				else
+					ny -= (nh + gappx);
+			}
+			else if((i % 4) == 1)
+				nx += nw + gappx;
+			else if((i % 4) == 2)
+				ny += nh + gappx;
+			else if((i % 4) == 3) {
+				if(s)
+					nx += nw + gappx;
+				else
+					nx -= (nw + gappx);
+			}
+			if(i == 0)
+			{
+				if(n != 1)
+					nw = (mon->ww - gappx) * mon->mfact - gappx;
+				ny = mon->wy + gappx;
+			}
+			else if(i == 1)
+				nw = (mon->ww - gappx) - nw - 2 * gappx;
+			i++;
+		}
+		resize(c, nx, ny, nw - 2 * c->bw, nh - 2 * c->bw, False);
+	}
+}
